<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Everaldo.Cardoso.C19BR.Mobile.View.CountryDetail"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
             prism:ViewModelLocator.AutowireViewModel="True"
             NavigationPage.HasNavigationBar="False"
             xmlns:viewControl="clr-namespace:Everaldo.Cardoso.C19BR.Mobile.ViewControl">

    <ContentPage.Content>
        <StackLayout 
            IsVisible="{Binding IsNotBusy}"
            Margin="{OnPlatform iOS='15,40,15,15', Android='15,15,15,15'}">           

            <StackLayout
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                
                <Frame 
                    BorderColor="#cb9ca1"
                    BackgroundColor="Transparent">
                    
                    <StackLayout 
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Horizontal">                       

                        <Label x:Name="lblTitleLocation" 
                            FontSize="35"
                            FontAttributes="Bold"
                            TextColor="#af4448"
                            Text="Coronavírus"/>

                        <Label x:Name="lblLocation" 
                            FontSize="35"
                            FontAttributes="Bold"
                            TextColor="#000000"
                            Text="{Binding Location}"/>

                        <Label x:Name="lblTwoPoints" 
                            FontSize="35"
                            FontAttributes="Bold"
                            TextColor="#af4448"
                            Text=":"/>
                    </StackLayout>
                </Frame>

                <Frame
                    Margin="0,5,0,0"
                    BorderColor="#cb9ca1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">

                    <StackLayout>

                        <StackLayout 
                            Margin="0,0,0,20">

                            <Label 
                                HorizontalOptions="CenterAndExpand"
                                Text="Informações nacionais"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#af4448"/>

                            <BoxView 
                                Color="#cb9ca1" 
                                HeightRequest="1.5"/>

                        </StackLayout>

                        <StackLayout 
                            Margin="0,0,0,20">

                            <Label 
                                HorizontalOptions="Start"
                                Text="População"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#af4448"/>

                            <Label 
                                Text="{Binding Population}"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#000000"
                                HorizontalOptions="Start"/>

                        </StackLayout>

                        <StackLayout 
                            Margin="0,0,0,20">

                            <Label 
                                HorizontalOptions="Start"
                                Text="Casos confirmados"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#af4448"/>

                            <Label 
                                HorizontalOptions="Start"
                                Text="{Binding NumberCases}"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#000000"/>
                        </StackLayout>

                        <StackLayout 
                            Margin="0,0,0,20">

                            <Label
                                HorizontalOptions="Start"
                                Text="Óbitos"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#af4448"/>

                            <Label
                                HorizontalOptions="Start"
                                Text="{Binding NumberDeaths}"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#000000"/>
                        </StackLayout>

                        <StackLayout 
                            Margin="0,0,0,20">

                            <Label
                                HorizontalOptions="Start"
                                Text="Taxa de mortalidade"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#af4448"/>

                            <Label 
                                HorizontalOptions="Start"
                                Text="{Binding DeathsRate}"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#000000"/>
                        </StackLayout>

                        <StackLayout 
                            Margin="0,0,0,20">

                            <Label
                                HorizontalOptions="Start"
                                Text="Última atualização"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#af4448"/>

                            <Label 
                                HorizontalOptions="Start"
                                Text="{Binding DateUpdate}"
                                FontSize="25"
                                FontAttributes="Bold"
                                TextColor="#000000"/>
                        </StackLayout>

                        <StackLayout
                            VerticalOptions="EndAndExpand">                            
                        
                        <BoxView 
                            Color="#cb9ca1" 
                            HeightRequest="1.5" 
                            VerticalOptions="EndAndExpand"/>
                        
                            <StackLayout 
                                Margin="0,5,0,0"
                                Orientation="Horizontal">

                                <viewControl:RoundButton 
                                    x:Name="rbtnAbout" 
                                    IconCode="&#xFcc1;" 
                                    IconCodeColor="#af4448" 
                                    ButtonBackgroundColor="Transparent" 
                                    ValueBorderColor="#af4448"
                                    HorizontalOptions="Start"
                                    ValueMargin="0"
                                    VerticalOptions="CenterAndExpand"/>

                                <viewControl:RoundButton 
                                    x:Name="rbtnUpdateData" 
                                    IconCode="&#xF450;" 
                                    IconCodeColor="#af4448" 
                                    ButtonBackgroundColor="Transparent" 
                                    Command="{Binding UpdateData}" 
                                    ValueBorderColor="#af4448"
                                    HorizontalOptions="Start"
                                    ValueMargin="0"
                                    VerticalOptions="CenterAndExpand"/>


                                <Button
                                    x:Name="Button"
                                    Margin="15,0,15,0"
                                    BackgroundColor="Transparent"
                                    Command="{Binding ListStates}"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Detalhar por estados"
                                    TextColor="#af4448"
                                    BorderWidth="2.5"
                                    HorizontalOptions="FillAndExpand"
                                    BorderColor="#cb9ca1">

                                    <Button.CornerRadius>
                                        <OnPlatform x:TypeArguments="x:Int32">
                                            <OnPlatform.Platforms>
                                                <On Platform="iOS" Value="25" />
                                                <On Platform="Android" Value="60" />
                                            </OnPlatform.Platforms>
                                        </OnPlatform>
                                    </Button.CornerRadius>
                                </Button>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </StackLayout>            
        </StackLayout>
    </ContentPage.Content>    
</ContentPage>